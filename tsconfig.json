{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "api/*": [
        "api/*"
      ],
      "public/*": [
        "public/*"
      ],
      "components/*": [
        "components/*"
      ],
      "containers/*": [
        "containers/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "static/*": [
        "static/*"
      ],
      "layout/*": [
        "layout/*"
      ],
      "interfaces/*": [
        "interfaces/*"
      ],
      "stores/*": [
        "stores/*"
      ]
    },
    "strict": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.svg"
  ]
}
